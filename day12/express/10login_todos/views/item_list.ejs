                        <!--<a href="/edit/575c4b502c00d3c414af998e">修改</a>,-->
                        <!--<a href="/delete/575c4b502c00d3c414af998e" onclick="return confirm('删除以后不能恢复的，确定？')">删除</a>-->
                    <!--</li>-->

                    <%
                        for(var i=0; i < items.length; i++){
                            var item = items[i];
                            if(item.finish_state === 1){
                                //画wei完成的 li
                    %>
                                <li>
                                    <%= item.title %>
                                    &nbsp;<!--如果state=yes表示可以把状态变成2-->
                                    <a href="/finish/<%= item._id %>/?state=yes">完成</a>,
                                    <a href="/edit/<%= item._id %>">修改</a>,
                                    <a href="/delete/<%= item._id %>"
                                       onclick="return confirm('删除以后不能恢复的，确定？')">删除</a>
                                </li>
                                <%
                            }else {
                                //画为已经完成的 li
%>
                                <li class="finished">
                                    <del><%= item.title %></del>
                                    &nbsp;
                                    <a href="/finish/<%= item._id %>/?state=no">恢复</a>,
                                    <a href="/edit/<%= item._id %>">修改</a>,
                                    <a href="/delete/<%= item._id %>" onclick="return confirm('删除以后不能恢复的，确定？')">删除</a>
                                </li>
<%
                            }
                        }
                    %>

