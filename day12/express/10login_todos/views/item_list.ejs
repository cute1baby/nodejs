            </li>
        </ul>

        <!-- 设置logo -->
        <h1 class="logo">
            <a href="/">TODO List</a>
        </h1>

    </div>
    <div class="main box">
        <div class="box">

            <div class="box todos">
                <h2 class="box">待办事项</h2>
                <ul>

                    <!--<li>-->
                        <!--整理资料-->
                        <!--&nbsp;-->
                        <!--<a href="/finish/575c4b4d2c00d3c414af998d/?state=yes">完成</a>,-->
                        <!--<a href="/edit/575c4b4d2c00d3c414af998d">修改</a>,-->
                        <!--<a href="/delete/575c4b4d2c00d3c414af998d"-->
                           <!--onclick="return confirm('删除以后不能恢复的，确定？')">删除</a>-->
                    <!--</li>-->

                    <!--<li class="finished">-->
                        <!--<del>完成作业</del>-->
